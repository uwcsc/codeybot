    "moment": "^2.29.1",
    "sqlite": "^4.0.22",
    "sqlite3": "^5.0.2",
    "typescript": "^4.2.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/sqlite3": "^3.1.7",
    "@tsconfig/node14": "^1.0.0",
